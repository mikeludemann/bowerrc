{
    "cwd": "~/.project",
    "directory": "bower_components",
    "registry": {
        "search": [
            "http://localhost:8000",
            "https://registry.bower.io"
        ]
    },
    "shorthand-resolver": "git://github.com:{username}/{repository_name}.git",
    "proxy": "http://proxy.local",
    "https-proxy": "http://proxy.local",
    "ca": "~/certificate.pem",
    "color": true,
    "timeout": 60000,
    "save": true,
    "save-exact": true,
    "strict-ssl": true,
    "storage": {
        "packages": "~/.bower/packages",
        "registry": "~/.bower/registry",
        "links": "~/.bower/links"
    },
    "interactive": true,
    "resolvers": [
        "mercurial-bower-resolver",
        "bitbucket-resolver",
        "github-enterprise-resolver",
        "bower-npm-resolver"
    ],
    "shallowCloneHosts": [
        "git.example.com"
    ],
    "scripts": {
        "preinstall": "",
        "postinstall": "",
        "preuninstall": ""
    },
    "ignoredDependencies": [
        "jquery"
    ]
}